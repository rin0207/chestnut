<div>
	<p>商品一覧</p>
	<div></div>
	<div>
		<table>
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
					<td>
						<%= item.id %>
					</td>
					<td>
						<%= item.name %>
					</td>
					<td>
						<%= item.price %>
					</td>
					<td>
						<%= item.genre.name %>
					</td>
					<td>
						<%= item.sales_status %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>