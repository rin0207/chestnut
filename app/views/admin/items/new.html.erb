<div>
	<p>商品新規登録</p>
	<div>
		<div>
			<%= form_for @item, :url => {:action => :create} do |f| %>
				<div>
					<%= attachment_image_tag @item, :image, fallback: "img/no_image.jpg", size:"300x200" %>
					<%= f.attachment_field :image %>
				</div>
				<div>
					<div>
						<label>商品名</label>
						<div>
							<%= f.text_field :name %>
						</div>
					</div>
				</div>
		</div>
	</div>
</div>