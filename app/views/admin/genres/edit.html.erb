<div>
	<div>
		<p>ジャンル編集</p>
		<div>
			<%= form_for @genre, :url => {:action => :update} do |f| %>
			<div>
				<label>ジャンル</label>
			</div>
			<div>
				<%= f.text_field :name %>
			</div>
			<div>
				<label>
					<%= f.radio_button :valid_status, 1 %>有効
				</label>
				<label>
					<%= f.radio_button :valid_status, 0 %>無効
				</label>
			</div>
			<div>
				<%= f.submit '変更を保存する' %>
			</div>
		</div>
	</div>
</div>