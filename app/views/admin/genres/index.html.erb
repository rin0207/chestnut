<div>
	<div>
		<p>ジャンル一覧・追加</p>
		<div>
			<%= form_for(@genre, url: admin_genres_path) do |f| %>
			<div>
				<label>ジャンル</label>
			</div>
			<div>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.radio_button :valid_status, :true %>
				<%= f.label :valid_status, "有効" %>
				<%= f.radio_button :valid_status, :false %>
				<%= f.label :valid_status, "無効" %>
			</div>
			<div>
				<%= f.submit '追加'　%>
			</div>
			<% end %>
		</div>
	</div>
	<div>
		<div>
			<table>
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>