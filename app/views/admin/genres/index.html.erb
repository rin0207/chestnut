<div>
	<div>
		<p>ジャンル一覧・追加</p>
		<div>
			<%= form_for(@genre, url: admin_genres_path) do |f| %>
			<div>
				<label>ジャンル</label>
			</div>
			<div>
				<%= f.text_field :name %>
			</div>
			<div>
				<%= f.radio_button :valid_status, :true %>
				<%= f.label :valid_status, "有効" %>
				<%= f.radio_button :valid_status, :false %>
				<%= f.label :valid_status, "無効" %>
			</div>
			<div>
				<%= f.submit '追加'　%>
			</div>
			<% end %>
		</div>
	</div>
	<div>
		<div>
			<table>
				<thead>
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<td>
							<%= genre.name %>
						</td>
						<td>
							<% if genre.valid_status == true %>
								有効
							<% else %>
								無効
							<% end %>
						</td>
						<td>
							<%= link_to "編集", edit_admin_genre_path(genre) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>